<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="nesterov">
        <createTable tableName="drivers" schemaName="freight">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="driver_license" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="int" defaultValue="1"/>
            <column name="hours_per_month" type="numeric" defaultValue="0"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="nesterov">
        <createTable tableName="trucks" schemaName="freight">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="registration_number" type="varchar(7)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="model" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="shift_size" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="capacity" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="condition" type="int" defaultValue="0"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
